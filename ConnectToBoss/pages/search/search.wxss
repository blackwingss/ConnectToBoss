#wrap {
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.search {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    padding: 0 32rpx;
    background-color: #fff;
}
.search input {
    flex: 9;
    border-bottom: 1px solid #ccc;
    height: 80rpx;
}
.search-btn {
    flex: 1;
}
.search-btn image {
    width: 40rpx;
    height: 40rpx;
    padding-top: 12rpx;
}
.job-list {
  margin: 40rpx;
  margin-top: 120rpx;
}
.job-list .item {
  display: flex;
  padding: 40rpx 0;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(0, 0, 0, .1);
}
.job-list .item:first-child {
  padding-top: 0;
}
.job-list .item image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 40rpx;
}
.job-list .item .logo {
  flex: 2;
}
.job-list .item .desc {
  flex: 5;
}
.job-list .item .salary {
  flex: 3;
}

.job-list .item .desc .title,
.job-list .item .desc .company,
.job-list .item .desc .claim {
  display: block;
}
.job-list .item .desc .title {
  /*font-weight: 700;*/
}
.job-list .item .desc .company {
  font-size: 32rpx;
  /*font-weight: 700;*/
  padding: 10rpx 0;
}
.job-list .item .desc .claim {
  font-size: 28rpx;
  color: #333;
  /*font-weight: 600;*/
  padding-top: 20rpx;
}
.job-list .item .salary {
  /*font-weight: 900;*/
  color: #f60;
  font-size: 36rpx;
  text-align: right;
}
.no-data {
  text-align: center;
  margin-top: 400rpx;
}
